



<div class= "body">
  <div class= "can">
    <div class= "show-title">
        <h1><%= @article.title %></h1>
          <div class= "show-con">
            <p><%= @article.body %></p>
          </div>
      <div class= "btn-down">
        <div class="edit"><%= link_to "Edit", edit_article_path(@article) %></div>
        <div class="del"><%= link_to "Delete", article_path(@article), data: {
                          turbo_method: :delete,
                          turbo_confirm: "Are you sure?"
                        } %></div>
      </div>
    </div>
    <div class= "comment">

      <h2>Comments :</h2>
      <%= render @article.comments %>
    </div>

    <div class= "comment">
      <h2>Add a comment:</h2>
      <%= render 'comments/form' %>
    </div>


  </div>
</div>